{
    "name": "icawebdesign/reading-time",
    "description": "Calculate indication of length of time to read an article",
    "keywords": [
        "icawebdesign",
        "article",
        "reading",
        "digiserv"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ian.H",
            "email": "ian.h@digiserv.net",
            "role":  "Developer"
        }
    ],
    "require": {
        "php": "^8.1||^8.2||^8.3",
        "illuminate/support": "^9.0||^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0||^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "orchestra/testbench": "^8.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Icawebdesign\\ReadingTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Icawebdesign\\ReadingTime\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Icawebdesign\\ReadingTime\\Providers\\ReadingTimeServiceProvider"
            ],
            "aliases": {
                "ReadingTime": "Icawebdesign\\ReadingTime\\Facades\\ReadingTime"
            }
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --configuration phpunit.xml.dist --testdox",
        "test:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --configuration phpunit.xml.dist --testdox --coverage-html coverage",
        "test:coverage:clover": "XDEBUG_MODE=coverage vendor/bin/phpunit --configuration phpunit.xml.dist --testdox --coverage-clover coverage.xml",
        "stan": "vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=256M src"
    }
}
